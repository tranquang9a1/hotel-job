@model IEnumerable<WebHotel.Models.Job>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            jobName
        </th>
        <th>
            salary
        </th>
        <th>
            description
        </th>
        <th>
            required
        </th>
        <th>
            deadline
        </th>
        <th>
            Area
        </th>
        <th>
            domainName
        </th>
        <th>
            number
        </th>
        <th>
            Company
        </th>
        <th>
            Place
        </th>
        <th>
            cityName
        </th>
        <th>
            positionName
        </th>
