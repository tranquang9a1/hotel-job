            Position
        </th>
        <th>
            Time
        </th>
        <th>
            timeInfo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.jobName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.required)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.deadline)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Area.areaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.domainName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company.companyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Place.placeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.positionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position.positionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time.timeInfo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.timeInfo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.jobID }) |
            @Html.ActionLink("Details", "Details", new { id=item.jobID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.jobID })
        </td>
    </tr>
}

</table>
